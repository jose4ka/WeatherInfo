<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
    </style>


    <style name="AppThemeNight" parent="Theme.AppCompat.Light.DarkActionBar">
<!--        <item name="colorPrimary">@color/colorPrimaryNight</item>-->
<!--        <item name="colorPrimaryDark">@color/colorPrimaryDarkNight</item>-->
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/colorPrimaryNight</item>
        <item name="android:navigationBarColor">@color/colorPrimaryNight</item>

    </style>


    <style name="WindowElement" parent="Theme.AppCompat.Light">
        <item name="cardCornerRadius">2dp</item>
        <item name="cardElevation">5dp</item>
        <item name="contentPaddingBottom">10dp</item>
        <item name="contentPaddingTop">10dp</item>
        <item name="contentPaddingLeft">8dp</item>
        <item name="contentPaddingRight">8dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="WindowElementNight" parent="Theme.AppCompat.Light">
        <item name="cardCornerRadius">2dp</item>
        <item name="cardElevation">5dp</item>
        <item name="contentPaddingBottom">10dp</item>
        <item name="contentPaddingTop">10dp</item>
        <item name="contentPaddingLeft">8dp</item>
        <item name="contentPaddingRight">8dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@color/colorPrimaryNight</item>
    </style>

    <style name="ListHeaderElement" parent="Theme.AppCompat.Light">
        <item name="cardElevation">5dp</item>
        <item name="cardBackgroundColor">@color/colorRed</item>
    </style>


    <style name="ListElement" parent="Theme.AppCompat.Light">
        <item name="cardCornerRadius">2dp</item>
        <item name="cardElevation">5dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="cardBackgroundColor">#F3F3F3</item>
    </style>

</resources>
