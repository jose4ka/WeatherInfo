<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ecostudio.useful.weatherinfo.activity.ActivitySettings"
    android:orientation="vertical"
    android:background="@color/backgroundMenu">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/city_name_p"
        android:textColor="@color/colorText"
        android:layout_margin="5dp"
        />

    <EditText
        android:id="@+id/etSettingsMainCity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/lout_bg"
        android:padding="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/units_p"
        android:textColor="@color/colorText"
        android:layout_margin="5dp"/>

    <Spinner
        android:id="@+id/unitsSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/array_units"
        android:layout_margin="5dp"
        android:background="@drawable/lout_bg"
        android:padding="10dp"/>


</LinearLayout>
